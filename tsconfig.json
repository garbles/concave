{
  "compilerOptions": {
    "incremental": true,
    "target": "es2016",
    "lib": ["dom", "es2017"],
    "declaration": true,
    "jsx": "react",
    "module": "commonjs",
    "outDir": "build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "src/*.test.ts", "src/*.test.tsx"]
}
